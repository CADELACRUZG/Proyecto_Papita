@page "/Figura2"

<PageTitle>Figura2</PageTitle>

<style>
    html, body {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

h1:focus {
    outline: none;
}

a, .btn-link {
    color: #0071c1;
}

.btn-primary {
    color: #fff;
    background-color: #1b6ec2;
    border-color: #1861ac;
}

.content {
    padding-top: 1.1rem;
}

.valid.modified:not([type=checkbox]) {
    outline: 1px solid #26b050;
}

.invalid {
    outline: 1px solid red;
}

.validation-message {
    color: red;
}

#blazor-error-ui {
    background: lightyellow;
    bottom: 0;
    box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.2);
    display: none;
    left: 0;
    padding: 0.6rem 1.25rem 0.7rem 1.25rem;
    position: fixed;
    width: 100%;
    z-index: 1000;
}

    #blazor-error-ui .dismiss {
        cursor: pointer;
        position: absolute;
        right: 0.75rem;
        top: 0.5rem;
    }

.blazor-error-boundary {
    background: url(data:image/svg+xml;base64,) no-repeat 1rem/1.8rem, #b32121;
    padding: 1rem 1rem 1rem 3.7rem;
    color: white;
}

    .blazor-error-boundary::after {
        content: "An error has occurred."
    }

.triangle-container {
    width: 300px;
    height: 300px;
    margin: 20px auto;
    position: relative;
    border: 1px solid #ccc;
}

.triangle {
    position: absolute;
    width: 100%;
    height: 100%;
}

.measurements {
    font-size: 12px;
    color: #333;
}
</style>

<h1>Proyecto de Leyes Trigonométricas</h1>

<div class="container">
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Cálculo de Triángulos</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        A continuación se le solicitarán datos necesarios para resolver el problema
                    </div>
                    
                    <h4>Primer Triángulo</h4>
                    <div class="form-group">
                        <label for="catetoA">Ingresa el valor del primer cateto:</label>
                        <input type="number" id="catetoA" class="form-control" @bind="catetoA" step="0.01" placeholder="Ingrese valor" />
                    </div>
                    <div class="form-group mt-2">
                        <label for="catetoB">Ingresa el valor del segundo cateto:</label>
                        <input type="number" id="catetoB" class="form-control" @bind="catetoB" step="0.01" placeholder="Ingrese valor" />
                    </div>
                    
                    @if (paso >= 1)
                    {
                        <div class="alert alert-success mt-3">
                            Hipotenusa del primer triángulo: @hipotenusa.ToString("F2")
                        </div>
                    
                        <h4 class="mt-3">Segundo Triángulo</h4>
                        <div class="form-group">
                            <label for="catetoOtro">Ingresa el cateto Altura:</label>
                            <input type="number" id="catetoOtro" class="form-control" @bind="catetoOtro" step="0.01" placeholder="Ingrese valor" />
                        </div>
                    }
                    
                    @if (paso == 0)
                    {
                        <button class="btn btn-primary mt-3" @onclick="CalcularPrimerTriangulo">Calcular Primer Triángulo</button>
                    }
                    else if (paso == 1)
                    {
                        <button class="btn btn-primary mt-3" @onclick="CalcularSegundoTriangulo">Calcular Segundo Triángulo</button>
                    }
                    
                    @if (mostrarResultados)
                    {
                        <div class="mt-4">
                            <h4>Resultados:</h4>
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Hipotenusa del primer triángulo
                                    <span class="badge bg-primary rounded-pill">@hipotenusa.ToString("F2")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Hipotenusa del segundo triángulo
                                    <span class="badge bg-primary rounded-pill">@hipotenusa2.ToString("F2")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Tercer triángulo - Cateto Altura
                                    <span class="badge bg-primary rounded-pill">@catetoAltura.ToString("F2")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    El ángulo C es
                                    <span class="badge bg-danger rounded-pill">@anguloC.ToString("F2")°</span>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card mt-4">
                <div class="card-header bg-success text-white">
                    <h3>Visualización</h3>
                </div>
                <div class="card-body">
                    @if (paso >= 1)
                    {
                        <div>
                            <h5>Primer Triángulo</h5>
                            <div class="triangle-container">
                                <div style="width: 200px; height: 50px; border: 1px solid #ccc;">
                                    <svg class="triangle" viewBox="0 0 100 100" width="100%" height="100%">
                                        <polygon
                                            points="10,90 @(10 + escalarValor(catetoA)) ,90 @(10 + escalarValor(catetoA)) ,@(90 - escalarValor(catetoB))"
                                            fill="rgba(0,123,255,0.2)"
                                            stroke="blue"
                                            stroke-width="2" />

                                        <!-- Etiquetas dinámicas -->
                                        <text x="@(10 + escalarValor(catetoA) / 2)" y="98" class="measurements" font-size="8px">@catetoA</text>
                                        <text x="@(12 + escalarValor(catetoA))" y="@(90 - escalarValor(catetoB) / 2)" class="measurements" font-size="8px">@catetoB</text>
                                        <text x="@(10 + escalarValor(catetoA) / 2)" y="@(90 - escalarValor(catetoB) / 2)" class="measurements" font-size="8px">@hipotenusa.ToString("F2")</text>
                                    </svg>
                                </div>
                            </div>
                        </div>

                    }
                    
                    @if (mostrarResultados)
                    {
                        <div class="mt-3">
                            <h5>Segundo Triángulo</h5>
                            <div style="width: 200px; height: 100px; border: 1px solid #ccc;">
                                <svg class="triangle" viewBox="0 0 100 100" width="100%" height="100%">
                                    <polygon
                                        points="10,90 @(10 + escalarValor(hipotenusa)),90 @(10 + escalarValor(hipotenusa)),@(90 - escalarValor(catetoOtro))"
                                        fill="rgba(40,167,69,0.2)"
                                        stroke="green"
                                        stroke-width="2" />

                                    <!-- Etiquetas dinámicas -->
                                    <text x="@(10 + escalarValor(hipotenusa) / 2)" y="95" class="measurements" font-size="6px" text-anchor="middle">@hipotenusa.ToString("F2")</text>
                                    <text x="@(12 + escalarValor(hipotenusa))" y="@(90 - escalarValor(catetoOtro) / 2)" class="measurements" font-size="6px">@catetoOtro.ToString("F2")</text>
                                    <text x="@(10 + escalarValor(hipotenusa) / 2)" y="@(90 - escalarValor(catetoOtro) / 2)" class="measurements" font-size="6px" text-anchor="middle">@hipotenusa2.ToString("F2")</text>
                                </svg>
                            </div> <!-- CIERRE DEL div DEL SEGUNDO TRIÁNGULO -->
                        </div> <!-- CIERRE DEL mt-3 DEL SEGUNDO TRIÁNGULO -->

                        <div class="mt-3">
                            <h5>Tercer Triángulo (Ángulo C)</h5>
                            <div style="width: 200px; height: 100px; border: 1px solid #ccc;">
                                <svg class="triangle" viewBox="0 0 100 100" width="100%" height="100%">
                                    <polygon 
                                        points="10,90 @(10 + escalarValor(hipotenusa2)),90 @(10 + escalarValor(hipotenusa2)/2),@(90 - escalarValor(catetoAltura))"
                                        fill="rgba(40,167,69,0.2)"
                                        stroke="red" 
                                        stroke-width="2" />
                                    
                                    <!-- Etiquetas corregidas -->
                                    <text x="@(10 + escalarValor(hipotenusa2) / 2)" y="95" class="measurements" font-size="6px" text-anchor="middle">@hipotenusa2.ToString("F2")</text>
                                    <text x="@(10 + escalarValor(hipotenusa2) + 2)" y="@(90 - escalarValor(catetoAltura) / 2)" class="measurements" font-size="6px">@catetoAltura.ToString("F2")</text>
                                    <text x="@(10 + escalarValor(hipotenusa2) / 2)" y="@(90 - escalarValor(catetoAltura) / 2)" class="measurements" font-size="6px" text-anchor="middle">@hipotenusa2.ToString("F2")</text>

                                    <!-- Ángulo C corregido -->
                                    <path d="M @(10 + escalarValor(hipotenusa2)) 90 A 10 10 0 0 1 @(10 + escalarValor(hipotenusa2) - 10) @(90 - 10)" 
                                        fill="none" stroke="red" stroke-width="1" />
                                    <text x="@(10 + escalarValor(hipotenusa2) - 15)" y="@(90 - 15)" class="measurements" font-size="6px">C=@anguloC.ToString("F2")°</text>
                                </svg>
                            </div> <!-- CIERRE DEL div DEL TERCER TRIÁNGULO -->
                        </div> <!-- CIERRE DEL mt-3 DEL TERCER TRIÁNGULO -->
                    }
                    else if (paso == 0)
                    {
                        <div class="text-center">
                            <p>Complete los datos del primer triángulo y haga clic en Calcular para continuar</p>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private double catetoA;
    private double catetoB;
    private double catetoOtro;
    private double hipotenusa;
    private double hipotenusa2;
    private double catetoAltura;
    private double anguloC;
    private bool mostrarResultados = false;
    private int paso = 0; // Control de flujo paso a paso
    
    private void CalcularPrimerTriangulo()
    {
        // Primer Triangulo 
        // Calculamos la hipotenusa usando el teorema de Pitágoras
        hipotenusa = Math.Sqrt(Math.Pow(catetoA, 2) + Math.Pow(catetoB, 2));
        paso = 1;
    }
    
    private void CalcularSegundoTriangulo()
    {
        // Segundo Triangulo
        // Calculamos la hipotenusa usando el teorema de Pitágoras
        hipotenusa2 = Math.Sqrt(Math.Pow(hipotenusa, 2) + Math.Pow(catetoOtro, 2)); 
        
        // Tercer triangulo 
        catetoAltura = catetoB * 2;
        
        // El angulo C del triangulo usando ley de cosenos
        double cosC = (Math.Pow(hipotenusa2, 2) + Math.Pow(hipotenusa2, 2) - Math.Pow(catetoAltura, 2)) / (2 * hipotenusa2 * hipotenusa2);

        // Aseguramos que el valor esté en el rango [-1, 1] para evitar errores numéricos
        cosC = Math.Max(-1.0, Math.Min(1.0, cosC));

        // Calculamos el ángulo en radianes y lo convertimos a grados
        anguloC = Math.Acos(cosC) * (180 / Math.PI);
        anguloC = Math.Round(anguloC, 2);
        
        mostrarResultados = true;
    }
    
    // Función para escalar valores para la visualización
    private double escalarValor(double valor)
    {
        // Factor de escala: asume que los valores están entre 1-20, ajusta según necesidades
        double factorEscala = 12;
        return valor * factorEscala;
    }
}